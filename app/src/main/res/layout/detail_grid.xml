
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
    app:columnCount="2">

    <TextView
        android:id="@+id/movie_title_textview"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|left"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnSpan="2"
        app:layout_columnWeight="0"
        app:layout_rowWeight="1"
        android:paddingLeft="36dp"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        app:layout_gravity="fill_horizontal"
        android:background="@color/orange_custom"
        tools:text="Movie Title" app:layout_row="0" app:layout_column="0"/>

    <ImageView
        android:id="@+id/image_movie"
        android:layout_width="wrap_content"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:maxHeight="80dp"
        android:maxWidth="50dp"
        app:layout_gravity="fill_horizontal"
        app:layout_row="1"
        app:layout_column="0" android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>
    <LinearLayout
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="1"
        app:layout_column="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/release_date"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:layout_gravity="fill_horizontal"
            android:gravity="center_vertical"
            android:textSize="20sp"
            tools:text="19"/>

        <TextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="7.6"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        android:maxHeight="80dp"
        app:layout_rowWeight="1" app:layout_row="2" app:layout_column="0"
        android:fontFamily="sans-serif-light"
        android:text="Description"
        android:textSize="16sp" app:layout_rowSpan="1"/>

</android.support.v7.widget.GridLayout>
